<div class="container">
  <div class="row mt-3">
    <div class="col-4">
      <div class="align-items-center" style="width: 100%;">
          <div class="card-profile">
            <% if current_user && current_user.photo.attached? %>
              <%= cl_image_tag current_user.photo.key, class:"profile-img" %>
            <% else %>
              <%= image_tag current_user.image_path, class:"profile-img" %>
            <% end %>
            <div class="card-body">
              <div class="pb-3"style="border-bottom: 1px solid grey !important;">
                <%= image_tag "poke-profile.png", class:"poke-profile-img"%> Pokemons: <%= current_user.pokemons.length %> <br>
                <i class="fa-solid fa-star pt-3" style="font-size: 24px;"></i> Reviews: <%= current_user.reviews.length %> <br>
                <i class="fa-solid fa-book pt-3" style="font-size: 24px;"></i> Bookings: <%= current_user.bookings.length %> <br>
              </div>
              <div class="pb-3">
                <p class="pt-3">Name: <%= current_user.first_name %></p>
                <p>Surname: <%= current_user.last_name %></p>
                <p>Gender: <%= current_user.gender %></p>
                <%= link_to "Edit profile",  edit_user_registration_path, class:"btn btn-success" %>
              </div>
            </div>
          </div>
      </div>
    </div>
    <div class="col-8">
      <div class="container mb-3">
       <h2 style="font-size: 24px; font-weight: bold;">My pokemons</h2>
        <div class="row">
          <% current_user.pokemons.each do |pokemon| %>
            <div class="col-sm-12 col-md-6 col-lg-6 mb-3">
              <div class="card" style="width: 100%;">
                <%= cl_image_tag pokemon.photo.key, class:"poke-img"%>
                <div class="card-body">
                  <h5 class="card-title"><%= pokemon.name %></h5>
                  <p class="card-text">Element: <%= pokemon.element %></p>
                  <p class="card-text">Trainer: <%= pokemon.user.first_name %></p>
                  <%= link_to "Edit my pokemon", edit_pokemon_path(pokemon), class: "btn btn-primary" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <div class="row justify-content-center">
        <div class="col-auto">
          <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#AddMonForm">
            Add a Pokemon
          </button>

          <div class="modal fade" id="AddMonForm" tabindex="-1" aria-labelledby="AddMonFormLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="AddMonFormLabel">Add a pokemon</h5>
                </div>
                <div class="modal-body">

                    <%= simple_form_for @pokemon do |f| %>

                      <div class="form-inputs">
                        <%= f.input :name %>
                        <%= f.input :element %>
                        <%= f.input :move %>
                        <%= f.input :photo, as: :file %>
                        <%= f.input :address,
                          input_html: {data: {address_autocomplete_target: "address"}, class: "d-none"},
                          wrapper_html: {data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}%>
                      </div>

                      <div class="form-actions">
                        <%= f.button :submit, "GoOoOD", class: "btn btn-primary" %>
                      </div>

                    <% end %>

                </div>

              </div>
            </div>
          </div>


        </div>
      </div>
      </div>
    </div>
  </div>
</div>


<div class="container" style="border-top: 1px solid grey !important;">
  <p style="font-size: 24px; font-weight: bold; margin-top: 8px;">My bookings</p>
  <div class="row">
    <% current_user.bookings.each do |booking| %>
      <div class="col-sm-6 col-md-4 col-lg-3">
        <div class="card shadow-sm" style="width: 100%; border-radius: 8px;">
          <div class="card-body">
            <div>
              <h5 class="card-title">Date: <%= booking.date %></h5>
              <p class="card-text">Address: <%= booking.pokemon.address %></p>
            </div>
            <p class="card-text">Pokemon: <%= booking.pokemon.name %></p>
            <p class="card-text">User: <%= booking.pokemon.user.first_name %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
