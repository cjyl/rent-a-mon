            <%= f.input :rating %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Rate this Pokémon", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
      <div class="col-8">
        <div class="container">
          <div class="row">
            <% @pokemon.reviews.each do |review| %>
              <div class="col-sm-12 col-md-6 col-lg-6 g-3">
                <div class="shadow-sm px-3 py-2 bg-white">
                  <p><%= "⭐️" * review.rating %></p>
                  <p><em>"<%= review.content %>"</em></p>
                  <p class="opacity-25"><%= review.created_at.strftime("%d %B %Y ") %></p>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
